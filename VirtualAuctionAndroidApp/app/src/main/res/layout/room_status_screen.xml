<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/RoomIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Room Id" />

    <TextView
        android:id="@+id/RoomIdEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RoomIdText"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/HostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RoomIdText"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:text="" />

    <Button
        android:id="@+id/settings_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RoomIdText"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="5dp"
        android:text="Settings" />

    <TableRow
        android:id="@+id/Table"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/ListViewofUsers"
            android:layout_width="300dp"
            android:layout_height="500dp"
            android:layout_below="@+id/RoomIdText"

            android:text="" />

        <TextView
            android:id="@+id/ListViewofTeams"
            android:layout_width="100dp"
            android:layout_height="500dp"
            android:layout_below="@+id/RoomIdText"

            android:text="" />
    </TableRow>


    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Table"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:text="Start" />

    <Button
        android:id="@+id/leave_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_button"
        android:layout_below="@+id/Table"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="50dp"
        android:text="Leave" />

    <Button
        android:id="@+id/quit_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/leave_button"
        android:layout_below="@+id/Table"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="50dp"
        android:text="Quit" />

</RelativeLayout>