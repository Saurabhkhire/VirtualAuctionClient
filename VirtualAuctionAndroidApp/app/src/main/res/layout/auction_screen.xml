<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/RoomIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Room Id" />

    <TextView
        android:id="@+id/RoomIdEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RoomIdText"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/HostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RoomIdText"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/TeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/HostText"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text=""
        android:inputType="textPersonName"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/PlayerNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TeamName"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Player Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/PlayerCountryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayerNameTxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Player Country" />

    <TextView
        android:id="@+id/PlayerRoleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayerCountryTxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Player Role" />

    <TextView
        android:id="@+id/PriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PlayerRoleTxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Price" />

    <TextView
        android:id="@+id/CurrentBidTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PriceTxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Current Bid" />

    <TextView
        android:id="@+id/TimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CurrentBidTxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Time" />

    <TextView
        android:id="@+id/BudgetTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeTxt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:text="Current Budget" />

    <TextView
        android:id="@+id/PlayerNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PlayerNameTxt"
        android:layout_alignBottom="@+id/TeamName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""/>

    <TextView
        android:id="@+id/PlayerCountryEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PlayerCountryTxt"
        android:layout_alignBottom="@+id/PlayerNameEdit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/PlayerRoleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PlayerRoleTxt"
        android:layout_alignBottom="@+id/PlayerCountryTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />



    <TextView
        android:id="@+id/PriceEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PriceTxt"
        android:layout_alignBottom="@+id/PlayerRoleTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/CurrentBidEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CurrentBidTxt"
        android:layout_alignBottom="@+id/PriceTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/TimeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TimeTxt"
        android:layout_alignBottom="@+id/CurrentBidTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:ems="10"
        android:text="" />

    <TextView
        android:id="@+id/BudgetEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BudgetTxt"
        android:layout_alignBottom="@+id/TimeEdit"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:ems="10"
        android:text="" />

    <Button
        android:id="@+id/bid_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BudgetTxt"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:text="BID" />

    <Button
        android:id="@+id/teams_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BudgetTxt"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:text="Teams" />

    <Button
        android:id="@+id/settings_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BudgetTxt"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="100dp"
        android:text="Settings" />


</RelativeLayout>