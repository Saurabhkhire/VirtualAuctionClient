<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/RoomIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Room Id" />

    <TextView
        android:id="@+id/RoomIdEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RoomIdText"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/HostEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/RoomIdText"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:text="" />

    <TextView
        android:id="@+id/TeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/HostEdit"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text=""
        android:inputType="textPersonName"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RoomIdText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:text="Play" />

    <Button
        android:id="@+id/leave_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play_button"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="Leave" />

    <Button
        android:id="@+id/quit_button"
        android:inputType="textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leave_button"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="Quit" />


    <Button
        android:id="@+id/teams_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quit_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:text="Teams" />

    <Button
        android:id="@+id/unsold_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teams_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:text="Unsold Players" />

    <Button
        android:id="@+id/select_player_for_round_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unsold_list_button"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:text="Select Player" />


</RelativeLayout>