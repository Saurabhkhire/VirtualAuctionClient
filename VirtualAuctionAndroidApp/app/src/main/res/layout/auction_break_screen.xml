<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginregister.MainActivity">

    <TextView
        android:id="@+id/RoomIdEdit"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/HostEdit"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/RoomIdEdit"
        android:background="@drawable/rectangle"
        android:text=""
        android:textStyle="bold"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/TeamNameBorder"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="" />

    <ImageView
        android:id="@+id/TeamName"
        android:layout_width="58dp"
        android:layout_height="28dp"
        android:layout_marginStart="301dp"
        android:layout_marginTop="6dp"
        android:adjustViewBounds="true"
        android:background="#F2F2F2"
        android:gravity="center"
        android:inputType="textPersonName"
        android:scaleType="fitCenter"
        android:text="" />

    <TextView
        android:id="@+id/MinBreakTime"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/HostEdit"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/MinBreakTime"
        android:ems="10"
        android:textStyle="bold"
        android:text="Play" />

    <Button
        android:id="@+id/leave_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/play_button"
        android:text="Leave" />

    <Button
        android:id="@+id/quit_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/leave_button"
        android:text="Quit" />


    <Button
        android:id="@+id/teams_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/quit_button"
        android:ems="10"
        android:text="Teams" />

    <Button
        android:id="@+id/unsold_list_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/teams_button"
        android:ems="10"
        android:text="Unsold Players" />

    <Button
        android:id="@+id/select_player_for_round_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/unsold_list_button"
        android:ems="10"
        android:text="Select Player" />


</RelativeLayout>