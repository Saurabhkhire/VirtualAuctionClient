<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginregister.MainActivity">


    <TextView
        android:id="@+id/UserDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="User Details"
        android:inputType="textPersonName"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TableLayout
        android:id="@+id/PlayerInfoTable"
        android:background="#000000"
        android:layout_below="@+id/UserDetailsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">


        <TableRow >

            <TextView
                android:id="@+id/UsernameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/UsernameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />

        </TableRow>
        <TableRow >

            <TextView
                android:id="@+id/PasswordTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/PasswordEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />

        </TableRow>
        <TableRow >

            <TextView
                android:id="@+id/EmailIdTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:text="EmailId"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/EmailIdEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16sp" />

        </TableRow>


    </TableLayout>


</RelativeLayout>